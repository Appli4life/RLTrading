<Window x:Class="RLTrading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RLTrading"
        mc:Ignorable="d"
        Title="Trading Track"  Height="500" Width="800" MinHeight="450" MinWidth="800" Closing="Window_Closing" Icon="pic/logo.png">
    <Window.Background>
        <ImageBrush ImageSource="pic/hintergrund.png"></ImageBrush>
    </Window.Background>
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Label DockPanel.Dock="Left" Height="50" Style="{StaticResource ueberschrift}" Content="Rocket League Trading Track"></Label>
            <Image Margin="10" DockPanel.Dock="Right" Source="pic/logo.png" Height="90"></Image>
        </DockPanel>
        <StackPanel Margin="20,0,0,0" DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="allTrades" Style="{StaticResource menuBtn}" Content="Alle Trades" Click="allTrades_Click" ></Button>
            <Button x:Name="NewTrade" Margin="20,0,0,0" Style="{StaticResource menuBtn}" Content="Neuer Trade" Click="NewTrade_Click" ></Button>
        </StackPanel>
        <StackPanel Margin="0,0,20,10" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="Close"  Style="{StaticResource menuBtn}" Content="Close" Click="Close_Click" ></Button>
        </StackPanel>
        <ScrollViewer Margin="20,0,20,20">
            <ContentControl x:Name="main">

            </ContentControl>
        </ScrollViewer>
        
    </DockPanel>
</Window>

<UserControl x:Class="RLTrading.View.GegebenEditItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RLTrading.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel LastChildFill="False">
        <TextBox Text="{Binding Path=GEditItem.Name}"></TextBox>
        <Button DockPanel.Dock="Bottom" Content="_Anwenden" Command="{Binding Path=AnwendenG}" Style="{StaticResource BtnSpeichern}"></Button>
    </DockPanel>
</UserControl>
